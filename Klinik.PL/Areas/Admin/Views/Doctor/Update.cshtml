@model DoctorUpdateDTO
@{
    SelectList departments = ViewData["Departments"] as SelectList;
}

<form asp-action="Update" class="container" method="POST">
    <h2 class="my-4">Update Doctor</h2>
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label" asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName" />
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="LastName"></label>
        <input class="form-control" asp-for="LastName" />
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Thumbnail"></label>
        <input class="form-control" asp-for="Thumbnail" />
        <span class="text-danger" asp-validation-for="Thumbnail"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="FacebookURL"></label>
        <input class="form-control" asp-for="FacebookURL" />
        <span class="text-danger" asp-validation-for="FacebookURL"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="InstagramURL"></label>
        <input class="form-control" asp-for="InstagramURL" />
        <span class="text-danger" asp-validation-for="InstagramURL"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="TwitterURL"></label>
        <input class="form-control" asp-for="TwitterURL" />
        <span class="text-danger" asp-validation-for="TwitterURL"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="DepartmentId"></label>
        <select class="custom-select" asp-for="DepartmentId" asp-items="departments">
            <option selected>Select Department</option>
        </select>
        <span class="text-danger" asp-validation-for="DepartmentId"></span>
    </div>
    <p class="text-danger text-center">@Html.ValidationMessage("CustomError")</p>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>